@model IT_product_log.Models.VpnRequest

@{
    ViewBag.Title = "Review Requests";
}
<script>
$(function () {
    $("a.req-status").each(function () {
        if ($(this).text() == "Approved") $(this).addClass("btn-success btn-block");
        else if ($(this).text() == "Denied") $(this).addClass("btn-danger btn-block");
        else $(this).addClass("btn-warning btn-block");
    });
});
</script>
<link rel="stylesheet" type="text/css" href="~/CSS/RequestStyle.css">


<h2>Review Requests</h2>

<table class="table hoverTable">
  <thead>
    <tr>
      <th scope="col">Request Type</th>
      <th scaope="col">Request ID</th>
      <th scaope="col">Requester</th>
      <th scope="col">Date Submitted</th>
      <th scope="col">Status</th>
    </tr>
  </thead>
  <tbody>
  @foreach (var item in ViewBag.list)
  {
    <tr>
      <td>VPN Access</td>
      <td>@item.VPN_requestID</td>
      <td>@item.VPN_recipientFirst @item.VPN_recipientFirst</td>
      <td>@item.DateSubmitted</td>
      <td width="20%"><a href="~/Portal/ReviewRequest/@item.VPN_requestID" class="btn req-status" >@item.VPN_requestStatus</a></td>
    </tr>
  }
  </tbody>
</table>

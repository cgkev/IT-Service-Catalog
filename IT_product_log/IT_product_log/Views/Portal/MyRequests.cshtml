@model IT_product_log.Models.VpnRequest

@{
    ViewBag.Title = "My Requests";
}

<script>
$(function () {
    $("a.req-status").each(function () {
        if ($(this).text() == "Approved") $(this).addClass("btn-success");
        else if ($(this).text() == "Denied") $(this).addClass("btn-danger");
        else $(this).addClass("btn-warning");
    });     
});
</script>

<h2>My Request</h2>

<table class="table">
  <thead>
  <tr>
    <th scope="col">Request Type</th>
    <th scope="col">Request ID</th>
    <th scope="col">Date Submitted</th>
    <th scope="col">Status</th>
  </tr>
  </thead>
  <tbody>
  @foreach (var item in ViewBag.list)
  {
    <tr>
      <td>VPN Access</td>
      <td>@item.VPN_requestID</td>
      <td>@item.DateSubmitted</td>
      <td><a href="~/Portal/MyRequest/@item.VPN_requestID" class="btn req-status">@item.VPN_requestStatus</a></td>
    </tr>
  }
  <tr>
    <td>USB Storage Access</td>
    <td>1084</td>
    <td>01-10-2016</td>
    <td><a href="#" class="btn req-status">Pending Manager Approval</a></td>
  </tr>
  <tr>
     <td>WebEx Account Request</td>
    <td>1087</td>
    <td>06-20-2015</td>
    <td><a href="#" class="btn req-status">Denied</a></td>
  </tr>
  </tbody>
</table>
